{
    "compilerOptions": {
      "target": "ES5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "outDir": "lib",
      "declaration": true,
      "sourceMap": true,
      "declarationMap": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.stories.ts",
      "**/*.test.ts",
      "**/*.test.tsx",
      "./src/stories",
      "./src/setupTests.ts",
    ]
  }
  